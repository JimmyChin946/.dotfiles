#!/bin/bash
# Script to display Ethernet IP address for i3blocks

INTERFACE="enp0s31f6" # <--- IMPORTANT: Change this to your Ethernet interface (e.g., eth0, enp3s0)

if ip link show $INTERFACE | grep "state UP" &>/dev/null; then
    IP_ADDRESS=$(ip -4 addr show $INTERFACE | grep -oP 'inet \K[\d.]+')
    if [ -n "$IP_ADDRESS" ]; then
        echo "${IP_ADDRESS}"
    else
        echo "No IP"
    fi
else
    echo "Down"
fi
exit 0

